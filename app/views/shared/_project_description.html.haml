.hero-section
  %h4.details-title
    ="#{t(:problem)}"
  .field
    -if user_can_update?(project)
      = best_in_place project, :problem, :url => public_edit_path(project), :activator => "#problem#{project.id}", as: :textarea
      %a.btn-link{id: "problem#{project.id}"}
        %i.icon-pencil
    -else
      =project.problem

